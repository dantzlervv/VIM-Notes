<head>
    <% include ../../partials/head %>
</head>
<header>
    <% include ../../partials/header %>
</header>
<body class="container">
<main>
    <div class="bg-light rounded py-3" style="height: 78vh">
        <div class="form-group col-xl-7 col-lg-7 col-md-8 col-sm-10 col-11 center-block mx-auto mx-auto">
            <form id="edit-note" class="form-group mb-1" method="">
                    <input id="id-note" type='hidden' value="<%= note._id %>">
                    <input type="text" id = "note-title" class="form-control mb-2" value="<%= note.noteTitle %>">
                    <textarea id="note-text" class="form-control w-100" rows="7"><%= note.noteTextContent %></textarea>
            </form>
            <button id="edit-note" type="submit" class="btn btn-warning btn-md text-light">Save changes</button>
            <button id="delete-note" type="submit" class="btn btn-info btn-md text-light">Delete note</button>
            <a href="/"><button type="button" class="btn btn-primary btn-md">Cancel</button></a>

        </div>
    </div>
</main>
<footer>
    <% include ../../partials/footer %>
</footer>
<script src="/clientJS/notes/edit.js"></script>
</body>