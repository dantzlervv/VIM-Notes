<body class="container">
<main>
    <div class="bg-light rounded py-3" style="height: 78vh">
        <div class="form-group col-xl-7 col-lg-7 col-md-8 col-sm-10 col-11 center-block mx-auto mx-auto">
            <form id="list-form" action="/lists/create" method="POST">
                <input type="text" id="list-name" class="form-control mb-1" placeholder="List Title" name="listName" required>
                <div id="checks">
                </div>
                <button id="plus-btn" type="button" class="btn btn-info btn-md text-light w-100 mb-1">Add a List Item</button>
                <button type="submit" class="btn btn-info btn-warning text-light" style="left: 47%;">Create</button>
                <a href="/"><button type="button" class="btn btn-primary btn-md text-light" style="left: 47%;">Cancel</button></a>
            </form>
        </div>
    </div>
</main>
<footer>
    <% include ../../partials/footer %>
