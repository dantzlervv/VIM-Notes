<body class="container">
<main>
    <div class="bg-light rounded py-3" style="height: 80vh">
        <div class="form-group w-50 mx-auto">
            <form id="list-form" action="/lists/create" method="POST">
                <input type="text" id="list-name" class="form-control" placeholder="List Title" name="listName" required>
                <div id="checks">
                </div>
                <button id="plus-btn" type="button" class="btn btn-info btn-md text-light" style="left: 47%;">+</button>
                <button type="submit" class="btn btn-info btn-md text-light" style="left: 47%;">Create</button>
                <a href="/"><button type="button" class="btn btn-info btn-md text-light" style="left: 47%;">Cancel</button></a>
            </form>
        </div>
    </div>
</main>
<footer>
    <% include ../../partials/footer %>
</footer>
