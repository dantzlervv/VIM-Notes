<head>
    <% include ../../partials/head %>
</head>
<header>
    <% include ../../partials/header %>
</header>
<body class="container">
<main>
    <div class="bg-light rounded py-3" style="height: 80vh">
        <div class="form-group w-50 mx-auto">
            <form id="edit-list-form" method="">
                <div>
                    <input id="idList" type='hidden' value="<%= list._id %>">
                    <input type="text" id="list-name" class="d-inline-block" value="<%= list.listName %>">
                </div>
                <div id="checks">
                    <%if (list.listItem) { %>
                        <% list.listItem.forEach(function(item) { %>
                        <div>
                            <button class="btn btn-danger btn-md text-lighte delete-btn">x</button>
                            <input type="checkbox" class="check-item" name="task0" value="<%= item %>">
                            <label><%= item %></label>
                            <input type="button" value="Edit" class="btn btn-info btn-md text-light edit-btn">
                            <div hidden>
                                <input type="text" class="form-control">
                                <input type="button" value="Save" class="btn btn-success btn-md text-light save-btn">
                                <input type="button" value="Cancel" class="btn btn-warning btn-md text-light cancel-btn">
                            </div>
                        </div>
                        <% }); %>
                    <% } %>
                    <%if (list.listItemChecked) { %>
                        <% list.listItemChecked.forEach(function(item) { %>
                            <div>
                                <button class="btn btn-danger btn-md text-lighte delete-btn">x</button>
                                <input type="checkbox" class="check-item" name="task" checked="checked" value="<%= item %>">
                                <label><%= item %></label>
                                <input type="button" value="Edit" class="btn btn-info btn-md text-light edit-btn">
                                <div hidden>
                                    <input type="text" class="form-control">
                                    <input type="button" value="Save" class="btn btn-success btn-md text-light save-btn">
                                    <input type="button" value="Cancel" class="btn btn-warning btn-md text-light cancel-btn">
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
                <button type="button" id="plus-btn" class="btn btn-primary btn-lg">+</button>
                <div id="add-checkbox" hidden>
                    <input type="text" class="form-control" id="new-item" placeholder="Item content">
                    <input id="add-item-btn" type="button" value="Add" class="btn btn-info btn-md text-light">
                    <input id="add-cancel-btn" type="button" value="Cancel" class="btn btn-warning btn-md text-light">
                </div>
                <button id="save-changes" type="button" class="btn btn-info btn-md text-light" style="left: 47%;">Save changes</button>
                <button id="delete-list" type="button" class="btn btn-info btn-md text-light" style="left: 47%;">Delete list</button>
                <a href="/"><button type="button" class="btn btn-primary btn-lg">Cancel</button></a>
                <input type='hidden' name='_method' value='put'>
            </form>

        </div>
    </div>
</main>
<footer>
    <% include ../../partials/footer %>
</footer>
<script src="/clientJS/lists/edit.js"></script>
</body>