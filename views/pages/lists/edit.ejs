<head>
    <% include ../../partials/head %>
</head>
<header>
    <% include ../../partials/header %>
</header>
<body class="container">
<main>
    <div class="bg-light rounded py-3" style="height: 80vh">
        <div class="form-group w-50 mx-auto">
            <form id="edit-list-form" method="">
                <div>
                    <input id="idList" type='hidden' value="<%= list._id %>">
                    <input type="text" id="list-name" class="d-inline-block" value="<%= list.listName %>">
                </div>
                <div id="checks">
                    <%if (list.listItem) { %>
                        <% list.listItem.forEach(function(item) { %>
                        <div>
                            <input type="checkbox" class="check-item" name="task">
                            <input type="text" class="d-inline-block input-item" value="<%= item %>">
                            <button class="btn btn-danger btn-md text-light delete-btn">x</button>
                        </div>
                        <% }); %>
                    <% } %>
                    <%if (list.listItemChecked) { %>
                        <% list.listItemChecked.forEach(function(item) { %>
                            <div>
                                <input type="checkbox" class="check-item" name="task" checked>
                                <input type="text" class="d-inline-block input-item" value="<%= item %>">
                                <button class="btn btn-danger btn-md text-light delete-btn">x</button>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
                <button id="plus-btn" type="button" class="btn btn-info btn-md text-light" style="left: 47%;">+</button>
                <button id="save-changes" type="button" class="btn btn-info btn-md text-light" style="left: 47%;">Save changes</button>
                <button id="delete-list" type="button" class="btn btn-info btn-md text-light" style="left: 47%;">Delete list</button>
                <a href="/"><button type="button" class="btn btn-info btn-md text-light" style="left: 47%;">Cancel</button></a>
                <input type='hidden' name='_method' value='put'>
            </form>
        </div>
    </div>
</main>
<footer>
    <% include ../../partials/footer %>
</footer>
<script src="/clientJS/lists/edit.js"></script>
</body>